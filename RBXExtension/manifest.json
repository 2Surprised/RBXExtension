{
    "manifest_version": 3,
    "name": "Roblox+",
    "description": "Improves the Roblox user experience.",
    "version": "1.0",
    "permissions": [
        "declarativeNetRequest",
        "debugger",
        "webNavigation"
    ],
    "host_permissions": [
        "https://*.roblox.com/*",
        "https://*.rbxcdn.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_AvatarHeadshotURLRedirect",
                "enabled": true,
                "path": "avatarHeadshotURLRedirect.json"
            },
            {
                "id": "ruleset_FriendCarouselExtension",
                "enabled": true,
                "path": "friendCarouselExtension.json"
            }
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "friendCarousel/custom/lengthAndPopover.js",
                "friendCarousel/custom/scroll.css"
            ],
            "matches": [ "https://*.roblox.com/*" ]
        }
    ]
}